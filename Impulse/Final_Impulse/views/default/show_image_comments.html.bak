{{extend 'layout.html'}}
<body>
   <a href="/Final_Impulse/default/index"><img src="/Final_Impulse/static/back_button.png" alt="Back" />
</a>
    
<h1><center>Image Posts</center></h1>
<br>
    <h5>Insert an image below</h5>
{{=image_form}}

<table width='100%'>
    {{for image in images:}}
    <tr>
        <td><h5><center><b><i><u>{{=image.title.title()}}</u></i></b></center></h5></td>
    </tr>
	
    <tr>    
          <td><center><img width="250px" src="{{=URL('download', args=image.file)}}"/></center></td>
    </tr> 
          
        {{if len(d[image.id]):}}
        <tr>
        <td>
        	<table width='100%'>
            {{for t in d[image.id]:}}
                        <tr>
                            <td><center><b>{{=("%s says, '%s'")%(t[0],t[1])}}</b></center></td>
                        </tr>
            {{pass}}
            </table>
         
        
            <table width='95%'>
                <tr>
          			<form enctype="multipart/form-data" action="{{=URL('insert_image_comment',args=(image.id))}}" method="post"> 
                        <td style="wbite-space:nowrap" cellspan=2><center><input name="image_comment" type="text">
                        <input formmethod="post" name="commentform" type="submit" width="150"></center></td>
          			</form>
               </tr>
            </table>
                
    {{else:}}    
            <tr>
            <td>
              <table width='95%'>
                  <tr><td><center><h4>Be the <b>first</b> to post a comment!</h4></center></td></tr>
               <tr>
                    <form enctype="multipart/form-data" action="{{=URL('insert_image_comment',args=(image.id))}}" method="post"> 
                        <td style="white-space:nowrap" cellspan=2><center><input name="image_comment" type="text">
                        <input formmethod="post" name="commentform" type="submit" width="150"></center></td>
                    </form>
                </tr>
                    
                
              </table>
                
            </td>
            </tr>
    </td>
    </tr>
    {{pass}}
    {{pass}}
</table>
</body>
